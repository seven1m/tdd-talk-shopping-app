<%= form_tag session_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, '', autofocus: true %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in" %>
  </div>
<% end %>
